<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:name="com.merge.user.aninterface.FaceArFragment"
        android:id="@+id/face_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Select"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Back"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/petak"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/petakmuka" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/roundMask"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="ROUND"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/heartMask"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="HEART"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/squareMask"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="SQUARE"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/ovalMask"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="OVAL"
                style="?android:attr/buttonBarButtonStyle"/>

        </LinearLayout>
    </RelativeLayout>


</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <ViewFlipper
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_marginBottom="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/dancing_script"
            android:textSize="20sp"
            android:textColor="@color/darkPurple"
            android:text="@string/quote" />

    </RelativeLayout>

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <android.support.v7.widget.CardView
                android:id="@+id/selectFaceShape"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/green1"
                card_view:cardElevation="6dp"
                card_view:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Want to know a little bit
                                      about our face shape?"/>

                    <ImageView
                        android:layout_width="104dp"
                        android:layout_height="170dp"
                        android:padding="10dp"
                        android:src="@drawable/faceshape" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/darkPurple"
                            android:textSize="16sp"
                            android:text="FACE SHAPE"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/selectAR"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/green2"
                card_view:cardElevation="6dp"
                card_view:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Want to wear some glasses without pay?"/>

                    <ImageView
                        android:layout_width="104dp"
                        android:layout_height="170dp"
                        android:padding="10dp"
                        android:src="@drawable/ar" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/darkPurple"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:text="AUGMENTED GLASSES"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
</LinearLayout>
